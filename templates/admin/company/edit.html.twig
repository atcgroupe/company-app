{% extends 'core/core.html.twig' %}

{# variable data #}
{% set title = 'Nouvelle' %}
{% set undoHref = path('admin_company_index') %}

{% if company is defined %}
    {% set title = 'Modifier une' %}
    {% set undoHref = path('admin_company_view', { id: company.id }) %}
{% endif %}

{% block main %}
    <div class="max-w-screen-sm mx-auto">
        <h1 class="text-2xl font-light text-center mb-2">{{ title }} companie</h1>

        {{ form_start(form, { attr: { 'novalidate': 'novalidate', 'class': 'max-w-screen-sm mx-auto' } }) }}
            {{ form_widget(form) }}

            <div class="grid gap-4 grid-cols-2 mt-8">
                {{ include('component/button/button.html.twig', {
                    'href': undoHref,
                    'label': 'Annuler',
                }) }}

                {{ include('component/button/button.html.twig', {
                    'label': 'Enregistrer',
                }) }}
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

<a
    href="{{ href }}"
    class="
        p-6
        border border-gray-400
        text-center
        shadow hover:shadow-lg
        hover:-translate-y-2
        hover:scale-105
        transition ease-in-out duration-200
        rounded
        flex flex-col justify-center items-center
    "
>
    <div>{{ label }}</div>

    {% if help is defined %}
        <p class="text-center text-gray-400 text-sm mt-1">
            {{ help }}
        </p>
    {% endif %}
</a>
